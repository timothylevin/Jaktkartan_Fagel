}

.fab button {
    background-color: #325e58; /* Bakgrundsfärg */
    color: white; /* Textfärg vit */
    border: none;
    border-radius: 50%;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px 0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    font-size: 24px; /* Större storlek på "+"-tecknet */
