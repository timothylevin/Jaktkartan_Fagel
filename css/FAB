}

.fab button:hover {
    transform: scale(1.1);
}

.fab button:focus {
    outline: none;
}

.fab button span {
    display: inline-block;
    line-height: 1;
}

/* Lägg till stilar för att inkludera en bild i fab-menyn */
.fab-menu {
    display: none; /* Dölj menyn från början */
    position: absolute; /* Positionera relativt till den förälderfab */
    bottom: calc(100% + 10px); /* Justera vertikal position */
    right: 0; /* Justera horisontell position */
    background: #325e58; /* Bakgrundsfärg */
    color: white; /* Textfärg vit */
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    padding: 10px;
}

.fab-menu img {
    display: block;
    width: 50px; /* Ändra bildstorlek efter behov */
    border-bottom: 1px solid #ccc;
    margin-bottom: 10px;
    padding-bottom: 10px;
}

/* Gör knapparna i FAB-menyn snyggare */
.fab-menu a {
    display: block;
    text-align: center;
    padding: 10px;
    margin: 5px 0; /* Lägg till lite mellanrum mellan knapparna */
    background-color: #325e58; /* Bakgrundsfärg */
    color: white; /* Textfärg vit */
    text-decoration: none;
    border-radius: 5px; /* Rundade hörn */
    transition: background-color 0.3s; /* Smidig övergång för bakgrundsfärg */
    border: 1px solid white; /* Vit kant runt knapparna */
}

/* Ändra bakgrundsfärgen när knappen är i hover-läge */
.fab-menu a:hover {
    background-color: #2c534d; /* Lite mörkare nyans för hover-effekt */
}
